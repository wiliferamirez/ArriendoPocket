@model IEnumerable<ArriendoPocket.Models.Propiedad>

@{
    ViewData["Title"] = "Propiedades";
}

<h1 class="mb-4">Propiedades Disponibles</h1>

@if (!Model.Any())
{
    <div class="alert alert-info text-center" role="alert">
        <h5 class="mb-3">Aún no has registrado ninguna propiedad</h5>
        <a class="btn btn-success" asp-action="Create">Presiona aquí para registrar una</a>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img src="https://via.placeholder.com/400x200?text=Propiedad" class="card-img-top" alt="Imagen propiedad">
                    <div class="card-body">
                        <h5 class="card-title">@item.AliasPropiedad</h5>
                        <p class="card-text">
                            <strong>Ciudad:</strong> @item.CiudadUbicacion <br />
                            <strong>Canon:</strong> $@item.CanonArrendatario <br />
                            <strong>Habitaciones:</strong> @item.NumeroHabitaciones
                        </p>
                        <a asp-action="Details" asp-route-id="@item.PropiedadID" class="btn btn-primary btn-sm">Ver detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
